# Step 1: Import necessary libraries
import pandas as pd
from google.colab import files
upload = files.upload()
# Step 2: Load the raw supply chain dataset
import pandas as pd
df = pd.read_csv("supply_chain_data.csv")
# Step 3: Preview column names and sample data
print("Columns in the dataset:")
print(df.columns.tolist())
print("\n Preview of the data:")
print(df.head())
# Step 4: Clean the data (drop dupilicates and missing values)
df.drop_duplicates(inplace=True)
df.dropna(inplace=True)
print(f"Data cleaned. Remaining rows: {len(df)}")
# Step 5: Create calcualted features (customize based on your data structure)
if {'Order_Demand', 'Stock_Level', 'Reorder_Point'}.issubset(df.columns):
    df["StockGap"] = df["Order_Demand"] - df["Stock_Level"]
    df["ShouldReorder"] = df["Stock_Level"] < df["Reorder_Point"]
    print("New columns created: 'StockGap', 'ShouldReorder'")
else:
print("Required columns for calculated files are missing. Please adjust Step 5.")
# Step 6: Save the cleaned dataset
df.to_csv("cleaned_supply_chain.csv", index=False)
print("cleaned_supply_chain.csv saved successfully")
from google.colab import files
files.download("cleaned_supply_chain.csv")
